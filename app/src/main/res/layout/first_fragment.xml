<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent"
    tools:context=".fragment.FirstFragment">


    <FrameLayout
        android:id="@+id/banneview"
        android:layout_width="match_parent"
        android:layout_height="250dp">



        <androidx.viewpager.widget.ViewPager
            android:id="@+id/bannerview"
            android:layout_gravity="fill_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </androidx.viewpager.widget.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center"


            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/dot_0"
                    android:layout_width="10dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/banner_checked" />

                <ImageView
                    android:id="@+id/dot_1"
                    android:layout_width="10dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/banner_unchecked" />

                <ImageView
                    android:id="@+id/dot_2"
                    android:layout_width="10dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/banner_unchecked" />

<!--                <ImageView-->
<!--                    android:id="@+id/dot_3"-->
<!--                    android:layout_width="10dp"-->
<!--                    android:layout_height="2dp"-->
<!--                    android:layout_marginLeft="2dip"-->
<!--                    android:layout_marginRight="2dip"-->
<!--                    android:background="@drawable/banner_unchecked" />-->

<!--                <ImageView-->
<!--                    android:id="@+id/dot_4"-->
<!--                    android:layout_width="10dp"-->
<!--                    android:layout_height="2dp"-->
<!--                    android:layout_marginLeft="2dip"-->
<!--                    android:layout_marginRight="2dip"-->
<!--                    android:background="@drawable/banner_unchecked" />-->

            </LinearLayout>



        </LinearLayout>


    </FrameLayout>

    <Button
        android:id="@+id/button_firstbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:text="FirstBannerview" />

    <Button
        android:id="@+id/button_scondbanenrview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:text="ScondBannerView" />

    <Button
        android:id="@+id/button_thirdbannerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ThirdBannerView"
        android:layout_gravity="bottom"/>



</FrameLayout>
